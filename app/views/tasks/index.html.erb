<h1>My Tasks</h1>

<ul style="list-style: none">
  <% @tasks.each do |task| %>
    <li><input type="checkbox" <%= task.completed ? "checked" : "" %> disabled> <%= link_to task.title, task_path(task)  %> <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>

<%= link_to '+ Create new task', new_task_path %>
